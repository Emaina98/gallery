# gallery
pipeline { 
  agent any
  tools { 
    gradle "Gradle-8"
  }
  stages { 
    stage('clone repository') {
      steps { 
        git 'https://github.com/Emaina98/gallery.git'
      }
    }
    stage ('Build the project') {
      steps { 
        sh 'gradle build'
      }
    }
    stage('Tests') {
      steps { 
        sh 'gradle test'
      }
    }
  }
}
